<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3 class="profile-name">name <%= @user.name %></h3>
  <h3 class="profile-introduction">introduction<%= @user.introduction %></h3>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Opinion</p>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book'%>
<% end %>

<% @users.each do |user| %>
<div>
  <p><%= attachment_image_tag user_path :profile_image_id, fallback: "no_image.jpg", size: "40x40" %></p>
  <p><%= user.name %></p>
  <%= link_to user_path(user.id) do %>
  <p>show</p>
  <% end %>
</div>
<% end %>