<div class="container">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
    <%= render 'users/info', user: current_user %>
    <h2 class="mt-3">New book</h2>
    <%= render 'form', book: Book.new %>
   </div>



  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table table-striped">
    <tbody>
     <tr>
      <td>
       <%= link_to user_path(@book.user) do %>
       <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
       <%= @book.user.name %>
       <% end %>
      </td>
      <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
      <td><%= @book.body %></td>

      <% if @user.id == current_user.id %>
       <td><%= link_to "Edit", edit_book_path(@book) %></td>
       <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are You Sure?"  %></td>
      <% end %>
      <% if @book.favorited_by?(current_user) %>
        <td>
         <%= link_to book_favorite_path(@book), method: :delete do %>
          ♥<%= @book.favorites.count %> いいね
         <% end %>
        </td>
      <% else %>
       <td>
        <%= link_to book_favorites_path(@book), method: :post do %>
         ♡<%= @book.favorites.count %>いいね
        <% end %>
       </td>
       <td>
        コメント数:<%= @book.book_comments.count %>
       </td>
      <% end %>
     </tr>
    </tbody>
   </table>
   <div class="form-group">
<% @book.book_comments.each do |book_comment| %>
  <%= link_to user_path(book_comment.user) do %>
   <p>
    <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
    <%= @book.user.name %>
    <% end %>
    <%= book_comment.comment %>
    <% if book_comment.user_id == current_user.id %>
     <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %>
    <% end %>
   </p>
 <% end %>

 <%= form_with model:[@book, @book_comment], local: true do |f| %>
  <%= f.text_area :comment, rows:'5', class: 'form-control book_body' %>
  <%= f.submit "送信" %>
 <% end %>
 </div>
</div>
</div>
</div>

