
<div class="book-body">
   <p><%= @book.user.name %></p>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>

  <% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are You Sure?"  %>
  <% end %>
</div>