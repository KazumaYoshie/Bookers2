<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3 class="profile-name">name <%= @user.name %></h3>
  <h3 class="profile-introduction">introduction<%= @user.introduction %></h3>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @book, local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Opinion</p>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book'%>
<% end %>

<% @books.each do |book| %>
   <div>
    <p><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></p>
    <%= link_to book_path(book.id) do %>
    <p><%= book.title %></p>
    <% end %>
    <p><%= book.body %></p>
    <p><%= book.user.name %></p>
   </div>
<% end %>
